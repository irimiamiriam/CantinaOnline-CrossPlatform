<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaOnline.Pages.ContabilPage"
             Title="ContabilPage">
    <Grid>
        <StackLayout VerticalOptions="Center" WidthRequest="300" HorizontalOptions="Center" Spacing="10">

            <!-- Elev nou Button -->
            <Button Text="Elev nou" 
                 FontSize="18" 
                 HorizontalOptions="FillAndExpand" 
                 VerticalOptions="FillAndExpand"  
                 BackgroundColor="#007AFF" 
                 TextColor="Black" 
                 Padding="20,10"
              />

            <!-- Plata noua Button -->
            <Button Text="Plata noua" 
                 FontSize="18" 
                 HorizontalOptions="FillAndExpand" 
                 VerticalOptions="Center" 
                 BackgroundColor="#007AFF" 
                 TextColor="Black" 
                 Padding="20,10"
                    Clicked="Button_Clicked"
              />

           
        </StackLayout>
    </Grid>
</ContentPage>