<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
  xmlns:custom="clr-namespace:CustomCalendar;assembly=CustomCalendar"
             x:Class="CantinaOnline.Pages.ElevPage"
             Title="ElevPage">

    

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <Image
                x:Name="QrCodeImage"
                 Source="{Binding QrCodeImage}"
                HeightRequest="200"
                WidthRequest="200"/>
            
       
            <Label x:Name="numeL" HorizontalOptions="Center" Text="{Binding Nume}" FontSize="18" TextColor="Black"/>
            <Frame Padding="10" Margin="5" HasShadow="False" BorderColor="Gray">
                <custom:CustomCalendarView
                    ShowPastDatesCircled="True"
   SelectedDates="{Binding SelectedDates}"
   ZileRestante="{Binding ZileRestante}"
   DayTappedCommand="{Binding DayTappedCommand}" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>



</ContentPage>